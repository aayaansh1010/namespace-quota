apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: project-admin
  namespace: <your-namespace>  # Replace with the actual namespace
subjects:
  - kind: User  # Change to 'Group' if assigning to a group
    name: <user-or-group-name>  # Replace with the actual user or group
    apiGroup: rbac.authorization.k8s.io
roleRef:
  kind: ClusterRole
  name: admin
  apiGroup: rbac.authorization.k8s.io
